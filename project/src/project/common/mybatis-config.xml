<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<!--  classpath를 인식하는 애들은 src 아래에 둬야함 -->

<configuration>
	<typeAliases>
		<typeAlias alias = "user" type = "project.vo.UserVo"/>
		<typeAlias alias = "team" type = "project.vo.TeamVo"/>
		<typeAlias alias = "board" type = "project.vo.BoardVo"/>
	</typeAliases>

<mappers>
	<mapper resource = "/project/common/user-mapping.xml"/>
	<mapper resource = "/project/common/team-mapping.xml"/>
	<mapper resource = "/project/common/board-mapping.xml"/>
</mappers>
</configuration>